{
  "name": "@aereal/cdk-mackerel-container-agent",
  "version": "1.4.0",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "repository": "git@github.com:aereal/cdk-mackerel-container-agent.git",
  "author": "aereal <aereal@aereal.org>",
  "license": "MIT",
  "keywords": [
    "aws",
    "cdk",
    "mackerel"
  ],
  "scripts": {
    "build": "tsc -p .",
    "lint": "eslint --ext .ts src/**/*",
    "test": "jest",
    "clean": "rm -rf ./src/**/*.js ./src/**/*.d.ts",
    "prepack": "run-s clean build",
    "prepublish": "run-s clean build"
  },
  "devDependencies": {
    "@aws-cdk/assert": "2.0.0-rc.27",
    "@types/jest": "26.0.24",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "aws-cdk-lib": "2.0.0-rc.27",
    "constructs": "10.0.9",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "26.6.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "ts-jest": "26.5.6",
    "typescript": "4.4.4"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.0.0-rc.27"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ],
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "createDefaultProgram": true,
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "warn",
        {
          "functions": false,
          "classes": false,
          "variables": false,
          "typedefs": false
        }
      ],
      "@typescript-eslint/array-type": [
        "warn",
        {
          "default": "array-simple",
          "readonly": "array-simple"
        }
      ],
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "never"
        }
      ],
      "import/no-cycle": 2,
      "import/first": 1,
      "import/order": 2
    },
    "ignorePatterns": [
      "*.snap"
    ]
  }
}
